---
import Link from '@/components/ui/Link';
import { buttonVariants } from './ui/button';
import { PawPrint } from 'lucide-react';
import Logo from '@/components/Logo.astro';
import { cn } from '@/lib/utils';
---

<header
	class='sticky top-0 z-40 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60'
>
	<div
		class='container flex h-16 items-center space-x-4 sm:justify-between sm:space-x-0 mx-auto'
	>
		<Logo />

		<div class='flex flex-1 items-center justify-end space-x-4'>
			<nav class='flex items-center space-x-2 md:space-x-6'>
				<Link href='#features' className='text-sm font-medium '>
					Features
				</Link>
				<Link href='#how-it-works' className='text-sm font-medium '>
					Como Funciona
				</Link>
				<Link href='#testimonials' className='text-sm font-medium '>
					Testimonios
				</Link>
				<Link href='#faq' className='text-sm font-medium'> FAQ </Link>
				<Link
					href='/signin'
					className={buttonVariants({
						variant: 'secondary',
						className: 'ease-[ease] duration-200 transition-all',
					})}>Inicia sesi√≥n</Link
				>
				<Link
					href='/register'
					className={cn(
						buttonVariants({
							className: 'ease-[ease] duration-200 transition-all',
						}),
						'flex items-center',
					)}
				>
					<span>Crear Perfil</span>
					<span
						><PawPrint
							fill='var(--background)'
							stroke='var(--background)'
							className=''
						/></span
					>
				</Link>
			</nav>
		</div>
	</div>
</header>

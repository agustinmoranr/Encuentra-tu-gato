---
import { cn } from "@/lib/utils";
import FacebookLogo from "./FacebookLogo.astro";

interface Props extends astroHTML.JSX.ButtonHTMLAttributes {}

const {class: classProp, ...props} = Astro.props;
---

<button class={cn("flex items-center bg-[#0866FF] rounded-full h-10 px-3", classProp)} {...props}>
  <span class="mr-7"><FacebookLogo fill="#fff" width={24} height={24}  /></span>
  <span class="text-start grow font-medium text-[#fff]">Continuar con Facebook</span>
</button>

